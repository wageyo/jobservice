	<!-- get by id -->
	<select id="getById" resultMap="ResultWorkExperience" parameterType="java.lang.Integer">
		select <include refid="base_column"/> 
		from work_experience as we 
		where we.id= #{id, jdbcType=INTEGER}
	</select>


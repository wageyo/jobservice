			</if>
			<if test="leaveReason != null and leaveReason != ''">
				#{leaveReason, jdbcType=VARCHAR},
			</if>
			<if test="evaluation != null and evaluation != ''">
				#{evaluation, jdbcType=VARCHAR},
			</if>
			<if test="resume != null">
				<if test="resume.id != null and resume.id > 0">
					#{resume.id, jdbcType=INTEGER}
				</if>
			</if>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="esd.dao.JobCategoryDao">
	
	<!-- insert -->
	<!-- 使用数据库设定的自增id  useGeneratedKeys="true" keyProperty="id" -->
	<insert id="save" parameterType="JobCategory"
		useGeneratedKeys="false" keyProperty="code">
		insert into jobcategory(code,name,mark) 
		values(#{code},#{name},#{mark})
	</insert>

	<!-- delete -->
	<delete id="delete" parameterType="java.lang.String">
		delete from jobcategory where code = #{code}
	</delete>
	
	<!-- update -->
	<update id="update" parameterType="JobCategory">
		update jobcategory
		<trim prefix="set" suffixOverrides=",">
			<if test="name != null and name != ''">
				name=#{name},
			</if>
			<if test="mark != null and mark != ''">
				mark=#{mark}
			</if>
		</trim>
		where code= #{code}
	</update>

	<!-- get by code -->
	<select id="getByCode" resultType="JobCategory" parameterType="java.lang.String">
		select code,name,mark from jobcategory where code = #{code}
	</select>
	
	<!-- get by page -->
	<select id="getByPage" resultType="JobCategory" parameterType="map" >
		select * 
		from jobcategory
		<trim prefix="where" prefixOverrides="and|or">
			<if test="jobCategory !=null">
				<if test="jobCategory.code !=null and jobCategory.code != ''">
					code like concat('%',#{jobCategory.code},'%')
				</if>
				<if test="jobCategory.name !=null and jobCategory.name != ''">
					and name like concat('%',#{jobCategory.name},'%')
				</if>
				<if test="jobCategory.mark !=null and jobCategory.mark != ''">
					and mark = #{jobCategory.mark}
				</if>
			</if>
		</trim>
		limit #{start},#{size}
	</select>
	
	
	<!-- get all -->
	<select id="getAll" resultType="JobCategory" parameterType="int" >
		select code,name,mark from jobcategory;
	</select>

	<!-- get sub jc -->
	<select id="getSubJc" resultType="JobCategory" parameterType="java.lang.String" >
		select * from jobcategory 
		where code like concat('%',#{code},'%');
	</select>
	
</mapper>
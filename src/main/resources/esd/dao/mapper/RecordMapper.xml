<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="esd.dao.RecordDao">

	<!-- insert -->
	<!-- 使用数据库设定的自增id  useGeneratedKeys="true" keyProperty="id" -->
	<insert id="save" parameterType="Record"
		useGeneratedKeys="true" keyProperty="id">
		<!-- 返回新保存的这条数据的id,在保存后,用保存前对象.getId()得到-->
		<selectKey resultType="java.lang.Integer" order="AFTER"
			keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into 
		record(createDate,rid,rtitle,rname,rgender,rdisabilitycategory,rage,reducation,rmajor,rschool,uid,jid,jname,jsalary,jdescription,jcontacttel,jcontactperson,jnature,cid)
		values(now(),#{rID},#{rTitle},#{rName},#{rGender},#{rDisabilityCategory},#{rAge},#{rEducation},#{rMajor},#{rSchool},#{uID},#{jID},#{jName},#{jSalary},#{jDescription},#{jContactTel},#{jContactPerson},#{jNature},#{cID})
	</insert>

	<!-- delete -->
	<delete id="delete" parameterType="int">
		delete from record where id = #{id}
	</delete>
	
	<!-- getByPage -->
	<select id="getByPage" parameterType="map" resultType="Record">
		select *
		from record
		<trim prefix="where" prefixOverrides="and|or">
			<if test="record != null">
				<if test="record.rID != null and record.rID > 0 ">
					rid = #{record.rID}
				</if>
				<if test="record.uID != null and record.uID > 0">
					and uid = #{record.uID} 
				</if>
				<if test="record.jID != null and record.jID > 0 ">
					and jid = #{record.jID}
				</if>
				<if test="record.cID != null and record.cID > 0">
					and cid = #{record.cID}
				</if>
			</if>
		</trim>
		limit #{start},#{size};
	</select>
	
	<!-- getTotalCount -->
	<select id="getTotalCount" resultType="int" parameterType="map">
		select count(*)
		from record
		<trim prefix="where" prefixOverrides="and|or">
			<if test="record != null">
				<if test="record.rID != null and record.rID > 0 ">
					rid = #{record.rID}
				</if>
				<if test="record.uID != null and record.uID > 0">
					and uid = #{record.uID} 
				</if>
				<if test="record.jID != null and record.jID > 0 ">
					and jid = #{record.jID}
				</if>
				<if test="record.cID != null and record.cID > 0">
					and cid = #{record.cID}
				</if>
			</if>
		</trim>
	</select> 
</mapper>